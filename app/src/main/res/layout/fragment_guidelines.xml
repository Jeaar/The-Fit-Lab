<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard3"
    tools:context=".guidelines">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:alpha="0.9">

            <TextView
                android:id="@+id/guidelines_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identify Your Body Type"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingBottom="24dp"
                android:alpha="0.8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:alpha="0.9">

                <TextView
                    android:id="@+id/ectomorph_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ectomorph"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="8dp"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/ectomorph_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ectomorphs are characterized by a slim build, narrow shoulders, and fast metabolism. They often find it hard to gain muscle or fat, and may have a longer, leaner appearance."
                    android:alpha="0.8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:alpha="0.9">

                <TextView
                    android:id="@+id/mesomorph_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesomorph"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="8dp"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/mesomorph_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesomorphs have a naturally athletic build with broad shoulders and a narrow waist. They tend to gain muscle easily and have a more muscular and defined body shape."
                    android:alpha="0.8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:alpha="0.9">

                <TextView
                    android:id="@+id/endomorph_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endomorph"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingBottom="8dp"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/endomorph_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endomorphs typically have a rounder body, wider hips, and may find it easier to gain weight and muscle. They often struggle with losing fat and may have a slower metabolism."
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
