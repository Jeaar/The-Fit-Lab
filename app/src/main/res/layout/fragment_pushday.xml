<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F6FF"
    tools:context=".pushday">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push Day Workouts"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- Card: Bench Press -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/benchpress"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="15dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bench Press"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/bench_press_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/4Y2ZdHCOXok?si=vrmzq6ean-gfg1MW"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openBenchPressLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Incline Bench Press -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/incline"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="15dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incline Bench Press"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/incline_bench_press_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/2jFFCy8JBU8?si=pymp0WG11_37_dmZ"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openInclineBenchPressLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Chest Fly -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/chestfly"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="15dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chest Fly"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/chest_fly_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/eGjt4lk6g34?si=7sJQQxvA7Nb3_9df"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openChestFlyLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triceps"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- Card: Triceps Dips -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dips"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Triceps Dips"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/triceps_dips_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/oA8Sxv2WeOs?si=L0kazNyquCWxT4ZC"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openTricepsDipsLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Overhead Triceps Extension -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/overheadtricepextension"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overhead Triceps Extension"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/overhead_triceps_extension_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/1u18yJELsh0?si=jS-izNnmVUdOJfmB"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openOverheadTricepsExtensionLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Skull Crushers -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tricepmachinedip"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tricep push down"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/tricepushdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/LXkCrxn3caQ?si=xunX3ExwOzJSEJKS"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openSkullCrushersLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulders"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- Card: Shoulder Press -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/shoulderpress"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shoulder Press"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/shoulder_press_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/WvLMauqrnK8?si=9M5TFpSF_FFjhhE7"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openShoulderPressLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Lateral Raise -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/lateral"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lateral Raise"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/lateral_raise_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/XPPfnSEATJA?si=oUp28ZokNAvJRAwl"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openLateralRaiseLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Front Raise -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/front"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Front Raise"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/front_raise_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/ugPIPY7j-GM?si=IoV7wbdjQ0F13Ttl"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openFrontRaiseLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
