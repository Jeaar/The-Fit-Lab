<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FF"
    tools:context=".supplements">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplements for Gaining Weight"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#1F316F"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="These supplements are designed to help individuals who are looking to gain weight and build muscle mass."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To track your calories per day, you can use a TDEE calculator. This will help you determine your daily calorie intake. For bulking, add an additional 300-500 calories to your maintenance level."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/ectotdee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link to TDEE Calculator: TDEE Calculator"
            android:textColor="@android:color/holo_blue_dark"
            android:autoLink="web"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openTDEECalculator"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mass Gainer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#1F316F"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/massgainer"
                    android:contentDescription="Mass Gainer"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Mass gainers are high-calorie supplements designed to help individuals increase their caloric intake. They typically contain a mix of proteins, carbohydrates, and fats."
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To use mass gainers, mix the recommended serving with water or milk and consume 1-3 times daily, ideally post-workout or between meals."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creatine"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#1F316F"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Creatine is a naturally occurring compound that helps supply energy to your muscles during high-intensity exercise. It can improve strength and muscle mass."
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#333333"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/creatine"
                    android:contentDescription="Creatine"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To use creatine, mix 3-5 grams with water or your favorite beverage and consume it daily. It's most effective when taken around your workout time."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post-Workout Meals"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#1F316F"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/postworkout"
                    android:contentDescription="Post-Workout Supplements"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Post-workout meals help to speed up recovery after intense workouts."
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For best results, eat a meal within 30 minutes after exercising to maximize recovery and muscle growth."
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
