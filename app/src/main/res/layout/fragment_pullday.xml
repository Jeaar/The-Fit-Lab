                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openConcentrationCurlsLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/hammercurls"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hammer Curls"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/hammer_curls_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtube.com/shorts/OPhgvwKBOwI?si=SlcdhpYRD7-3dvb6"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openHammerCurlsLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Rear Deltoid Exercises -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rear Deltoid Exercises"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"
                android:layout_gravity="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/reardelt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rear Delt Fly"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/rear_delt_fly_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/nlkF7_2O_Lw?si=1O-53WzrgnnYfB1D"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openRearDeltFlyLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/reardelt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reverse Fly"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/reverse_fly_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="https://youtu.be/JoCRRZ3zRtI?si=2maQt-cGOTfB3T56"
                            android:textColor="@android:color/holo_blue_light"
                            android:clickable="true"
                            android:onClick="openReverseFlyLink"
                            android:textSize="14sp"
                            android:paddingTop="4dp"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/reardelt"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Face Pulls"
